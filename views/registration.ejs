        <script>
    function checkAvailability() {
    
    $("#loaderIcon").show();
    jQuery.ajax({
    url: "check_availability.html",
    data:'emailid='+$("#email").val(),
    type: "POST",
    success:function(data){
    $("#user-availability-status").html(data);
    $("#loaderIcon").hide();
    },
    error:function ()
    {
    event.preventDefault();
    alert('error');
    }
    });
    }
    </script>
    
